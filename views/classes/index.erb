<h1 style="text-align: center;">Class Timetable</h1>

  <% up_to_date_classes = @classes %>

<div class="week">

  <div class="monday" style="padding: 20px">
    <h3>Monday</h3>
    <% up_to_date_classes.each do |classe| %>
    <% if (Classe.day_of_week(classe.date())) == "Monday" %>
      <tbody>
        <tr>
          <% if (classe.check_spaces == 0) %>
        <td><a href="/classes/<%= classe.id %>"><%= classe.name() %></a> <span class="full"><b>Class Full</b></span></td>
          <% else %>
        <td><a href="/classes/<%= classe.id %>"><%= classe.name() %></a></td>
