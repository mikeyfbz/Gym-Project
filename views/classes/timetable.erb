<h1>Class Timetable</h1>

  <% up_to_date_classes = @classes %>

<div class="week">

  <div class="monday">
    <h3>Monday</h3>
    <% up_to_date_classes.each do |classe| %>
    <% if (Classe.day_of_week(classe.date())) == "Monday" %>
      <tbody>
        <tr>
        <td><a href="/classes/<%= classe.id %>"><%= classe.name() %></a></td>

