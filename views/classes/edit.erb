<h1>Edit Class Details</h1>

<form action="/classes/<%= @classe.id %>" method="post">
  <label for="name">Name:</label>
  <input type="text" name="name" ID="name" value="<%= @classe.name %>">
  <br>
  <label for="type">Type:</label>
  <input type="text" name="type" id="type" value="<%= @classe.type %>">
  <br>
  <label for="capacity">Capacity:</label>
  <input type="number" name="capacity" id="capacity" value="<%= @classe.capacity %>">
  <br>
  <label for="time">Time:</label>
  <input type="time" name="time" id="time" value="<%= @classe.time %>">
  <br>
  <label for="date">Date:</label>
  <input type="date" name="date" id="date" value="<%= @classe.date %>">
  <br>

  <input type="submit" value="Update Class">

</form>

<p><a href="/classes"> Back to Class List</a></p>
